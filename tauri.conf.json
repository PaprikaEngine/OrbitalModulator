{
  "productName": "orbital-modulator",
  "version": "0.1.0",
  "identifier": "com.orbital.modulator",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "./dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "orbital-modulator",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "",
    "shortDescription": "Modular Synthesizer",
    "longDescription": "A modular synthesizer with node-based architecture",
    "targets": "all",
    "icon": [
      "src-tauri/icons/icon.icns"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {
      "open": true,
      "save": true
    },
    "fs": {
      "readFile": true,
      "writeFile": true,
      "scope": ["**"]
    }
  }
}